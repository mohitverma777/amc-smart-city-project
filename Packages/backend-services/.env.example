# Server Configuration
NODE_ENV=development
PORT=3002
HOST=localhost
SERVICE_NAME=complaint-management-service

# Database Configuration  
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=amc_smart_city
POSTGRES_USER=postgres
POSTGRES_PASSWORD=amc_postgres_password

# MongoDB Configuration (for analytics and file storage)
MONGODB_URI=mongodb://admin:amc_mongo_password@localhost:27017/amc_smart_city?authSource=admin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=amc_redis_password
REDIS_DB=3

# JWT Configuration
JWT_SECRET=amc-super-secret-jwt-key-change-in-production

