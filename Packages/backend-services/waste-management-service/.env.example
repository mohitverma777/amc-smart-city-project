# Server Configuration
NODE_ENV=development
PORT=3009
HOST=localhost
SERVICE_NAME=waste-management-service

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=amc_smart_city
POSTGRES_USER=postgres
POSTGRES_PASSWORD=amc_postgres_password

# MongoDB Configuration
MONGODB_URI=mongodb://admin:amc_mongo_password@localhost:27017/amc_smart_city?authSource=admin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=amc_redis_password
REDIS_DB=5

# JWT Configuration
JWT_SECRET=amc-super-secret-jwt-key-change-in-production

# Waste Management Configuration
DEFAULT_COLLECTION_TIME=06:00
MAX_BIN_CAPACITY=120
COLLECTION_RADIUS_KM=2
RECYCLING_INCENTIVE_RATE=0.50
HAZARDOUS_DISPOSAL_FEE=25.00

# External Service URLs
USER_SERVICE_URL=http://localhost:3001
PAYMENT_SERVICE_URL=http://localhost:3006
NOTIFICATION_SERVICE_URL=http://localhost:3007
GRIEVANCE_SERVICE_URL=http://localhost:3002

# IoT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=amc_iot
MQTT_PASSWORD=amc_iot_password

# Tracking Configuration
GPS_UPDATE_INTERVAL=30
VEHICLE_TRACKING_ENABLED=true
GEOFENCE_RADIUS=500

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/waste-documents

# Logging
LOG_LEVEL=debug
