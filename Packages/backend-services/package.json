{
  "name": "amc-backend-services",
  "version": "1.0.0",
  "description": "AMC Smart City Backend Services",
  "private": true,
  "workspaces": [
    "shared",
    "api-gateway",
    "user-management",
    "grievance-service",
    "property-tax-service",
    "water-management",
    "waste-management",
    "payment-service",
    "notification-service",
    "chatbot-service",
    "analytics-service"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "dev:gateway": "npm run dev --workspace=api-gateway",
    "dev:users": "npm run dev --workspace=user-management",
    "start:all": "concurrently \"npm run dev:gateway\" \"npm run dev:users\"",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "lerna": "^6.6.2"
  }
}