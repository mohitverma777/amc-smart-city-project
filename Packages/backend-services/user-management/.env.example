# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost
SERVICE_NAME=user-management

# Database Configuration
MONGODB_URI=mongodb://admin:amc_mongo_password@localhost:27017/amc_smart_city?authSource=admin

# Redis Configuration  
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=amc_redis_password
REDIS_DB=1

# JWT Configuration
JWT_SECRET=amc-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=amc-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12

# OTP Configuration
OTP_EXPIRES_IN=600000
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.textlocal.in/send

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@amc.gov.in
FROM_NAME=AMC Smart City

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg
UPLOAD_PATH=./uploads/profiles

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=50

# Logging
LOG_LEVEL=debug