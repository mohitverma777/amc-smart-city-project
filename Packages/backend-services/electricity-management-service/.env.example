# Server Configuration
NODE_ENV=development
PORT=3010
HOST=localhost
SERVICE_NAME=electricity-management-service

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=amc_smart_city
POSTGRES_USER=postgres
POSTGRES_PASSWORD=amc_postgres_password

# MongoDB Configuration
MONGODB_URI=mongodb://admin:amc_mongo_password@localhost:27017/amc_smart_city?authSource=admin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=amc_redis_password
REDIS_DB=6

# JWT Configuration
JWT_SECRET=amc-super-secret-jwt-key-change-in-production

# Electricity Management Configuration
DEFAULT_TARIFF_RATE=5.50
DOMESTIC_SUBSIDY_LIMIT=300
COMMERCIAL_RATE_MULTIPLIER=1.8
INDUSTRIAL_RATE_MULTIPLIER=2.5
PEAK_HOUR_MULTIPLIER=1.5
OFF_PEAK_MULTIPLIER=0.8
SECURITY_DEPOSIT_MULTIPLIER=3
LATE_PAYMENT_PENALTY=2.0

# Load Management
MAX_LOAD_CAPACITY=1000
CRITICAL_LOAD_THRESHOLD=85
MAINTENANCE_OUTAGE_HOURS=4

# External Service URLs
USER_SERVICE_URL=http://localhost:3001
PAYMENT_SERVICE_URL=http://localhost:3006
NOTIFICATION_SERVICE_URL=http://localhost:3007
GRIEVANCE_SERVICE_URL=http://localhost:3002

# IoT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=amc_iot
MQTT_PASSWORD=amc_iot_password

# Smart Meter Configuration
METER_READING_INTERVAL=15
DEMAND_CALCULATION_WINDOW=30
VOLTAGE_THRESHOLD_MIN=200
VOLTAGE_THRESHOLD_MAX=250
POWER_QUALITY_MONITORING=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/electricity-documents

# Logging
LOG_LEVEL=debug
